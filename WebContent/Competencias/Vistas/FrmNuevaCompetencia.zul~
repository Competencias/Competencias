	public void Cambio() {

		if (cmbCompetencia.getText().equals("Interna")) {
			cmbModalidad.append("Vacacional");
			cmbModalidad.append("Semana Santa");
			cmbModalidad.append("Carnaval");

		}
		if (cmbCompetencia.getText().equals("Especial")) {
			cmbModalidad.append("Amistoso");
			cmbModalidad.append("..");
			cmbModalidad.append("..");

		} else if (cmbCompetencia.getText().equals("Oficial")) {
			cmbModalidad.append("Nacional");
			cmbModalidad.append("Regional");
			cmbModalidad.append("Municipal");

		}
	}
